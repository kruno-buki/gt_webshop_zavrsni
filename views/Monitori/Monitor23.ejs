<!DOCTYPE html>
<html lang="en">

<!-- !HEAD -->
<%- include('../partials/proizvodi_head_tag.ejs')  %>

<body>
<!-- ! pre-HEADER -->
<section class="pre-header">
    <div class="logo">
        <a href="/"><img src="/IMG/logo/Ikona_GameTech_ikona.png" alt="LOGO"></a>
    </div>

    <div id="basket">
        <% if(kosarica.length<2) {%>
           <a href="/kosarica"><img src="/IMG/logo/kolica-prazna.png" alt="KOŠARICA"></a>
        <% }else{ %>
          <a class="kosarica-stvar" href="/kosarica"><img src="/IMG/logo/kolica-prazna.png"  alt="KOŠARICA"></a>
        <%}%>
    </div>  
</section>
    <%- include('../partials/navigacija.ejs')  %>

    <!-- ! HEADER - Carousel -->
    <header>

    </header>
    <!-- !CONTENT  -->
    <section class="all-content vidi-vise-content">
        <section class="slideshowContainer-vidiVise">
            <!-- Container for the image gallery -->


            <!-- Full-width images with number text -->
            <div class="slides-vidiVise">
                <div class="numbertext">1 / 4</div>
                <img src="../Stranice_dodaci/Monitori_dodaci/Monitor23/Samsung 44 Odyssey.jpg">
            </div>

            <div class="slides-vidiVise">
                <div class="numbertext">2 / 4</div>
                <img src="../Stranice_dodaci/Monitori_dodaci/Monitor23/Samsung 44 Odyssey_2.jpg">
            </div>

            <div class="slides-vidiVise">
                <div class="numbertext">3 / 4</div>
                <img src="../Stranice_dodaci/Monitori_dodaci/Monitor23/Samsung 44 Odyssey_3.jpg">
            </div>

            <div class="slides-vidiVise">
                <div class="numbertext">4 / 4</div>
                <img src="../Stranice_dodaci/Monitori_dodaci/Monitor23/Samsung 44 Odyssey_4.jpg">
            </div>


            <!-- Next and previous buttons -->
            <a class="prevV" onclick="plusSlides(-1)">&#10094;</a>
            <a class="nextT" onclick="plusSlides(1)">&#10095;</a>

            <!-- Image text -->
            <div class="caption-container">
                <p id="caption"></p>
            </div>

            <!-- Thumbnail images -->
            <div class="row-picture">
                <div class="column-picture">
                    <img class="demo cursor" src="../Stranice_dodaci/Monitori_dodaci/Monitor23/Samsung 44 Odyssey.jpg"
                        onclick="currentSlide(1)" alt="Odyssey slika 1">
                </div>
                <div class="column-picture">
                    <img class="demo cursor" src="../Stranice_dodaci/Monitori_dodaci/Monitor23/Samsung 44 Odyssey_2.jpg"
                        onclick="currentSlide(2)" alt="Odyssey slika 2">
                </div>
                <div class="column-picture">
                    <img class="demo cursor" src="../Stranice_dodaci/Monitori_dodaci/Monitor23/Samsung 44 Odyssey_3.jpg"
                        onclick="currentSlide(3)" alt="Odyssey slika 3">
                </div>
                <div class="column-picture">
                    <img class="demo cursor" src="../Stranice_dodaci/Monitori_dodaci/Monitor23/Samsung 44 Odyssey_4.jpg"
                        onclick="currentSlide(4)" alt="Odyssey slika 4">
                </div>

            </div>

        </section>
        <section class="karakteristike">
            <div>
                <h1><%= data.nazivArtikla %></h1>
                <ul>

                    <li>Dijagonala 49</li>
                    <li>Format ekrana 32:9</li>
                    <li>Svjetlina 300</li>
                    <li>Kontrast 2500</li>
                    <li>Vidljivi kut (hor.) 178</li>
                    <li>Vidljivi kut (ver.) 178</li>
                    <li>Priključci: 3,5 mm Audio Jack, DP x2, HDMI, USB 2.0 x2, Ostale karakteristike, Zvučnici</li>

                </ul>
            </div>

             <!-- 2 -->
             <div>
                <p>na stanju: <span><%= data.stanje%></span> komada</p>


                <div class="cijena-pojedinačna">

                    <p> <% if(data.akcija_akcija_ID!== null){%>

                        <span class='cijena-akcija cijena-proizvoda' name='cijena'>
                            <%= data.akcijskaCijena.toFixed(2) %> kn
                        </span>
                        <span class='stara-cijena' name='cijena'>
                            <%= data.cijena %> kn
                        </span>
                    </p>
                    <%}else {%>
                    <p>
                        <span class='cijena-proizvoda' name='cijena'>
                            <%= data.cijena %> kn
                        </span>
                        <%}%>
                        </p>
                            
                </div>
            </div>
            <!-- 3 -->
            <div>
               
                <!-- ! FORMA STARTA -->
                <%if(data.stanje>0)  {%>
                <form action="/monitori/23" method="POST">
                <input name="id" type="hidden" value="<%= data.artikl_ID%>">
                <button type="submit" class="addBasket uKosaru">u košaricu</button>
                </form>
                <%} else{%>
                <button type="submit" class="addBasket uKosaru stanje-nula">u košaricu</button>
                <%} %>

                <a href="../monitori" class='pogledaj-ostalo'>
                    <p>pogledaj ostale monitore</p>
                </a> 
                
            </div>
    </section>

    </section>

    <!-- ! FOOTER -->
    <%- include('../partials/footer.ejs')%>
</body>

</html>